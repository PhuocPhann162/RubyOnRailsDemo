<div class="card shadow border-0 my-4">
  <div class="card-header bg-dark bg-gradient ml-0 py-3">
    <div class="row">
      <div class="col-12 text-center">
        <h2 class="text-white py-2">Friend List</h2>
      </div>
    </div>
  </div>
  <div class="card-body p-4">
    <div class="row pb-3">
      <div class="col-6">
      </div>
      <div class="col-6 text-end">
        <%= link_to " Create New Friend", new_friend_path, class: "bi bi-bookmark-plus btn btn-secondary mb-3 text-end"%>
      </div>
    </div>
    <table class="table table-striped table-bordered table-hover">
      <thead class="thead-dark">
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Phone</th>
          <th>Twitter</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @friends.each do |friend| %>
        <tr>
          <td>
            <%= link_to friend.first_name + ' ' + friend.last_name, friend, class: "text-dark"%>
          </td>
          <td><%= friend.email %></td>
          <td><%= friend.phone %></td>
          <td><%= friend.twitter %></td>
          <td style="width: 50px;">
            <%= link_to edit_friend_path(friend), class: "btn btn-secondary btn-sm" do%>
            <i class="bi bi-pencil-square"></i>
            <% end %>
          </td>
          <td style="width: 50px;">
            <%= button_to friend, method: :delete, data: { turbo_confirm: 'Are you sure ?' } , class: "btn btn-danger btn-sm" do%>
            <i class="bi bi-trash"></i>
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

